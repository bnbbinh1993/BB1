<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avtUserNotiflcation"
        android:src="@mipmap/logoavatar"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:textAlignment="viewStart"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:maxLines="@integer/google_play_services_version"
        android:maxHeight="100dp"
        android:maxEms="@integer/google_play_services_version"
        android:maxWidth="150dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Hồng Ngọc đã thích bài viết của bạn."
        android:layout_toEndOf="@+id/avtUserNotiflcation"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvNotiflcation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:text="Hôm qua lúc 15:30"
        android:layout_below="@+id/tvNotiflcation"
        android:layout_toEndOf="@+id/avtUserNotiflcation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>