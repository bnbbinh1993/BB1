<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/white_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NotiflcationFragment">
    <TextView
        android:id="@+id/tvTB1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Thông Báo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_below="@id/tvTB1"
        android:scrollbars="none"
        android:id="@+id/recyclerviewNotiflcation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_below="@+id/tvTB1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/ic_warning_black_24dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Xin lỗi, tính năng này đang được bảo trì!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>